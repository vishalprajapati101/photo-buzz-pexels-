<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color (with transparency) -->
    <solid android:color="#80000000" /> <!-- Semi-transparent black background (adjust the alpha value) -->

    <!-- Round Corners -->
    <corners android:radius="16dp" /> <!-- Adjust the corner radius to make it round -->

    <!-- Optional: Add padding to make the shape appear more spacious -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
