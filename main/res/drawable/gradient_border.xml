<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Border -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/theme1"
                android:endColor="@color/theme11"
                android:type="linear" />
            <corners android:radius="2dp" /> <!-- Slightly rounded corners -->
        </shape>
    </item>

    <!-- Card Background with 3dp Padding to create the border effect -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Card background color -->
            <corners android:radius="2dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
