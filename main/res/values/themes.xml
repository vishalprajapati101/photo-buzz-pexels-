<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.WallpapersInfinity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WallpapersInfinity" parent="Base.Theme.WallpapersInfinity" />

    <style name="viewitem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowTranslucentStatus">true</item>
        <!-- Optional: Make the background of the activity transparent if needed -->

    </style>

    <style name="search" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/theme1</item>
    </style>


    <!-- Black and White Theme -->
    <style name="Theme.BlackAndWhite" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/theme1</item>
        <item name="android:navigationBarColor">@color/white</item>


    </style>



</resources>
